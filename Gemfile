source "https://rubygems.org"

# Jekyll'in en son kararlı sürümünü kullanıyoruz
gem "jekyll", "~> 4.3.2"

# Varsayılan tema
gem "minima", "~> 2.5"

# Plugins
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.12"
end

# Windows ve JRuby için tzinfo-data gem'i
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]


# Ruby 3+ için gerekli olan gem'ler
gem "webrick", "~> 1.8"
gem "base64", "~> 0.1.1"
gem "bigdecimal", "~> 3.1"
gem "rexml", "~> 3.2"
gem "csv", "~> 3.2"

# Jekyll'in stable sürümü ile uyumlu
gem "kramdown-parser-gfm", "~> 1.1"

# Diğer potansiyel olarak gerekli gem'ler
gem "rouge", "~> 4.1"
gem "concurrent-ruby", "~> 1.2"
gem "i18n", "~> 1.14"
gem "ffi", "~> 1.15"
gem "sassc", "~> 2.4"